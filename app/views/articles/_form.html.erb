<%if @article.errors.any? %>
<h1>Erroes<h1>
<%@article.errors.full_messages.each do|msg|%>
<ul>
<li><%= msg%></li>
</ul>
<%end%>

<%end%>



<%= form_for @article do |f| %>
<p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :descrition %><br/>
    <%= f.text_area :descrition %>
</p>

<p>
<%= f.submit %>

<% end %>

