<h1>SIGN UP <h1>


<%if @user.errors.any? %>
<h1>Erroes<h1>
<%@user.errors.full_messages.each do|msg|%>
<ul>
<li><%= msg%></li>
</ul>
<%end%>

<%end%>



<%= form_for @user do |f| %>
<p>
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
</p>

<p>
    <%= f.label :email %><br/>
    <%= f.text_area :email %>
</p>

<p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
</p>


<%= f.submit "sign up" %>

<% end %>

